<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">?colorPrimaryDark</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="SanMarinoWildStrawberry" parent="AppTheme.NoActionBar">
    </style>

    <style name="SilverTreeTapestry" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">#67af90</item>
        <item name="colorPrimaryDark">#377f63</item>
        <item name="colorAccent">#af6787</item>
    </style>

    <style name="LimedOakWedgewood" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">#af8759</item>
        <item name="colorPrimaryDark">#7e5a2f</item>
        <item name="colorAccent">#5981af</item>
    </style>

</resources>
